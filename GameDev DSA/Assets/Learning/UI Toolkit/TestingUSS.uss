.info-label {
    font-size: 22px;
    color: rgb(255, 0, 0);
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    margin-top: 8px;
}

.action-btn {
    background-color: rgb(0, 0, 255);
    color: white;
    padding: 8px 10px;
    border-radius: 6px;
    -unity-font-style: bold;
}

.action-btn:hover {
    background-color: rgb(74, 142, 240);
}

.action-btn:active {
    background-color: rgb(35, 85, 170);
}
